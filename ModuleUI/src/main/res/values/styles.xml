<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/resource_theme</item>
        <item name="colorPrimaryDark">@color/resourceColorPrimaryDark</item>
        <item name="colorAccent">@color/resourceColorAccent</item>
        <item name="homeAsUpIndicator">@drawable/ui_back1</item>
        <item name="android:homeAsUpIndicator">@drawable/ui_back1</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/resource_theme</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="toolbarStyle">@style/AppToolbar</item>
        <item name="buttonStyle">@style/UiButton</item>
    </style>

    <style name="AppToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/resource_theme</item>
        <item name="titleTextAppearance">@style/AppToolbarTitle</item>
    </style>

    <style name="AppToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/resource_18</item>
        <item name="android:textColor">@color/resource_white</item>
    </style>

    <style name="UiButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/ui_button_selector</item>
        <item name="android:textColor">@color/resource_white</item>
    </style>

    <!-- Dialog进度条 -->
    <style name="UiLoadingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/resource_transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="UiLoadingDialogAnim" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/ui_loading_dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/ui_loading_dialog_exit_anim</item>
    </style>

    <!--按钮统一样式-->
    <style name="Common_Button_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/d_100</item>
        <item name="android:textSize">@dimen/spx_36</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ui_button_selector</item>
        <item name="android:textColor">@color/resource_white</item>
        <item name="android:layout_marginLeft">@dimen/d_30</item>
        <item name="android:layout_marginRight">@dimen/d_30</item>
    </style>

    <style name="Login_TextInputLayout_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/d_32</item>
        <item name="android:layout_marginRight">@dimen/d_32</item>
    </style>
</resources>